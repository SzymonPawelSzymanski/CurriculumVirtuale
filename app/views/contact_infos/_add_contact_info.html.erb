<h2>Dodaj swoje dane i informacje kontaktowe:</h2>
<% @user = local_user %>
<%= form_with model: [ local_user, local_user.build_contact_info ] do |user| %>
    <%= user.label "ImiÄ™: " %><br>
    <%= user.text_field :name %>
    <%= user.label "Nazwisko" %><br>
    <%= user.text_field :surname %>
    <%= user.label "Nr telefonu" %><br>
    <%= user.number_field :phone %>
    <%= user.label "E-mail:" %><br>
    <%= user.text_field :email %>
    <%= user.label "Adres: " %><br>
    <%= user.text_field :address %>
    <%= user.submit %>
<% end %>