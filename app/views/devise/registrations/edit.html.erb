<div class="edit_user_login_data">
<div class="edit_user_welcome">Edytuj swoje dane logowania </div>

<div class="alerts_login_screen">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
</div>

  <div class="field">
    Adres e-mail<br/>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Oczekujemy na potwierdzenie: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    Hasło</br> <i>(pozostaw to pole puste, jeżeli nie chcesz zmieniać hasła)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em>Minimum <%= @minimum_password_length %> znaków</em>
    <% end %>
  </div>

  <div class="field">
    Potwierdź hasło<br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    Obecne hasło </br><i>(musimy potwierdzić twoje obecne hasło przed jego zmianą)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Zaktualizuj", class: "submit_button" %>
  </div>
<% end %>
  </br>
  <div class="edit_user_cancel">Usuń konto</div>
<%= button_to "Chcę usunąć moje konto", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "submit_button" %>

</div>