<%- if controller_name != 'sessions' %>
  <%= link_to "Zaloguj się", new_session_path(resource_name), class: "submit_button" %><br />
<% end %>

<div class="register_links">
<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Zarejestruj się", new_registration_path(resource_name), class: "submit_button"%>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Zapomniałeś hasła?", new_password_path(resource_name), class: "submit_button" %><br />
<% end %>
</div>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Nie otrzymałe/aś wiadomości potwierdzającej?", new_confirmation_path(resource_name), class: "submit_button" %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Nie otrzymałe/aś informacji o odblokowaniu?", new_unlock_path(resource_name), class: "submit_button" %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Zaloguj z #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), method: :post , class: "submit_button"%><br />
  <% end %>
<% end %>
