<h2>Dodaj edukację:</h2>
<%= form_with model: [ @article, @article.educations.build ] do |form| %>
  <p>
    <%= form.label "Szkoła/Uczelnia" %><br>
    <%= form.text_field :school %>
  </p>
  <p>
    <%= form.label "Kierunek" %><br>
    <%= form.text_field :field_of_study %>
  </p>
  <p>
    <%= form.label "Specjalizacja" %><br>
    <%= form.text_field :specialization %>
  </p>
  <p>
    <%= form.label "Data rozpoczęcia" %><br>
    <%= form.date_field :begin_date %>
  </p>
  <p>
    <%= form.label "Data zakończenia" %><br>
    <%= form.date_field :finish_date %>
  </p>
  <p>
    <%= form.label "Tytuł zdobywany/zdobyty po studiach" %><br>
    <%= form.text_field :title %>
  </p>
  <p>
    <%= form.label "Uczę się/studiuję tam obecnie" %><br>
    <%= form.check_box :currently %>
  </p>
  <p>
    <%= form.label "Uczelnia wyższa" %><br>
    <%= form.check_box :if_university %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>