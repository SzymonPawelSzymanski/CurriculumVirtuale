<%= form_with model: [ @article, @article.experiences.build ] do |form| %>

    <%= form.label "Stanowisko" %><br>
    <%= form.text_field :worked_as %><br>

    <%= form.label "Nazwa Firmy" %><br>
    <%= form.text_field :company %><br>

    <%= form.label "Data rozpoczęcia" %><br>
    <%= form.date_field :begin_date %><br>

    <%= form.label "Data zakończenia" %><br>
    <%= form.date_field :finish_date %><br>

    <%= form.label "Pracuję tam obecnie" %><br>
    <%= form.check_box :currently %><br>

<!--    <%# render partial: "duties/add_duty" %><br>-->
    <%= form.label "Obowiązki:" %><br>
    <%= form.text_area :job_duties %><br>

    <%= form.submit("Dodaj doświadczenie", class: "submit_button")%>

<% end %>