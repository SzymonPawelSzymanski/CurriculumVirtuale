<% @article.experiences.each do |experience| %>
  <div class="card card-body" id="experience_card">
    <% if experience.worked_as != nil %>
      <div class="stuff_header">Stanowisko: <%= experience.worked_as %></div>
      Firma: <%= experience.company %><br>
      <%= experience.begin_date %> -
      <%= experience.finish_date %><br>
      <% if experience.currently %>
        Pracuję tam obecnie.
      <% end %><br>
      Obowiązki:<br>
      <%= experience.job_duties %><br>
    <% end %>
  </div>
<% end %>